<VirtualHost *>

Include /etc/proftpd/users.d/user_ftp.conf

ServerName                      "ftp intern"
ServerIdent                     on "FTP Server ready."
ServerAdmin                     root@localhost

DisplayLogin                    welcome.msg

PathDenyFilter                  \.ftp[a-z]+$

Port                            21

# Umask 022 is a good standard umask to prevent new files and dirs
# (second parm) from being group and world writable.
Umask 007

DeleteAbortedStores             on
MaxClientsPerHost               10
MaxLoginAttempts                3
DefaultRoot                     ~
AllowOverwrite                  on

PassivePorts                    60000 65535

TimesGMT off

TransferLog /data/logs/proftpd/ftp_xferlog
SystemLog   /data/logs/proftpd/ftp_proftpd.log
ExtendedLog /data/logs/proftpd/ftp_commands.log all

</VirtualHost>
