<VirtualHost *>

Include /etc/proftpd/users.d/sftp.conf

ServerName                      "sftp intern"
ServerIdent                     on "FTP Server ready."
ServerAdmin                     root@localhost

DisplayLogin                    welcome.msg
#DisplayFirstChdir               .message

PathDenyFilter                  \.ftp[a-z]+$

Port                            22
SFTPEngine on
SFTPLog /var/log/proftpd/sftp.log
SFTPHostKey /etc/ssh/ssh_host_dsa_key
SFTPHostKey /etc/ssh/ssh_host_rsa_key
SFTPClientMatch WinSCP|ClientSftp sftpProtocolVersion 1-3
SFTPCompression delayed
MaxLoginAttempts 4

# Umask 022 is a good standard umask to prevent new files and dirs
# (second parm) from being group and world writable.
Umask 006

DeleteAbortedStores             on
MaxClientsPerHost               10
MaxLoginAttempts                3
DefaultRoot                     ~
AllowOverwrite                  on

TimesGMT off

TransferLog <%= logdir %>/proftpd/sftp/xferlog
SystemLog   <%= logdir %>/proftpd/sftp/proftpd.log
ExtendedLog <%= logdir %>/proftpd/sftp/commands.log all

</VirtualHost>
